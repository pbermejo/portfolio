---
import ContactButtons from './ContactButtons.astro';

interface Props {
  phrase: string;
  email: string;
  linkedin: string;
}

const { phrase, email, linkedin } = Astro.props;
---

<div class="space-y-8 py-16">
  <p class="text-2xl text-paper-dark dark:text-charcoal-light max-w-2xl leading-relaxed italic border-l-4 border-paper-tint dark:border-charcoal-tint pl-6">
    "{phrase}"
  </p>
  <ContactButtons email={email} linkedin={linkedin} />
</div>
